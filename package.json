  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcrypt": "^6.0.0",
    "copyfiles": "^2.4.1",
    "crypto-js": "^4.2.0",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.5.8",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@krsbx/prisma-repo": "^0.2.7",
    "@types/bcrypt": "^6.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.3.0",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "openapi-typescript": "^7.9.1",
    "orval": "^7.11.2",
    "prisma": "^6.14.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "postbuild": "copyfiles -u 2 \"src/config/openapi/**/*\" dist/config/",
    "start": "node dist/server.js",
    "prisma:generate": "dotenv -e .env -- prisma generate",
    "prisma:seed": "dotenv -e .env -- tsx prisma/seed.ts",
    "prisma:migrate": "dotenv -e .env -- prisma migrate dev --name init",
    "orval:generator-dto": "orval --config src/config/orval.config.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "prisma:migrate:test": "dotenv -e .env.test -- prisma migrate dev --name init",
    "prisma:generate:test": "dotenv -e .env.test -- prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
